<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C'est juste pour tester les notes !!! et pour marquer le user" />

    <TextView
        android:id="@+id/textTitreHistoire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Titre de l'histoire " />

    <TextView
        android:id="@+id/textHistoireComplette"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="L'histoire complette" />

    <TextView
        android:id="@+id/textNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Note Moyenne" />


    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/groupRadioButtonAll">

        <RadioButton
            android:id="@+id/noteButton0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_weight="0.04"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/noteButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_weight="0.04"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/noteButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_weight="0.04"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/noteButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:text="3"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/noteButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_weight="0.04"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/noteButton5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_weight="0.04"
            android:onClick="onRadioButtonClicked"/>

        </RadioGroup>

    <TextView
        android:id="@+id/commentaireUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter un commentaire" />

    <EditText
        android:id="@+id/Add_commentaire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        />

    <Button
        android:id="@+id/ajouterEval"
        android:layout_width="202dp"
        android:layout_height="wrap_content"
        android:text="Valider Ã©valuation"
        android:onClick="ajouterEval"
    />

</LinearLayout>